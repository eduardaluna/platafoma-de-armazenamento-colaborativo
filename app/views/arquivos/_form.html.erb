<%= form_with(model: arquivo, local: true) do |form| %>
  <% if arquivo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(arquivo.errors.count, "error") %> prohibited this arquivo from being saved:</h2>

      <ul>
      <% arquivo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
