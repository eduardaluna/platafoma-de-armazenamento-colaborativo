    </div>
  <% end %>

  <div class="field">
    <%if arquivo.image.present?%>
    <%= image_tag arquivo.image_url%>
    <% end %>
    <%= form.label :image %>
    <%= form.hidden_field :image, value: arquivo.cached_image_data %>
    <%= form.file_field :image %>
    
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :Tipo_de_criptografia%>
    <%= form.select :cripto_tipo, ['Linha', 'Cesar', 'MD5']%>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
